<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        {{#if restaurant.google_map}}<a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">{{/if}}
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
      <div class="operation text-center mb-4">
        <a href="/restaurants/{{restaurant.id}}/edit" class="mr-3 btn btn-info">Edit</a>
        <a href="/restaurants" class="mr-3 btn btn-info">Back to all</a>

        <button type="button" class=" btn btn-primary" data-toggle="modal"
          data-target="#delete-button-{{restaurant.id}}">Delete</button>

        <!-- Modal for delete confirmation-->
        <div class="modal fade" id="delete-button-{{restaurant.id}}" tabindex="-1" role="dialog"
          aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">要刪除{{{restaurant.name}}}?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                確定要刪除嗎?
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                <form action="/restaurants/{{restaurant.id}}/delete?_method=DELETE" method="POST"
                  style="display: inline;">
                  <button type="submit" class=" btn btn-danger btn-sm">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>